<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:id="@+id/text_WeatherApi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Eco Flow Pro"
        android:textAlignment="center"
        android:visibility="gone"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.303" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="317dp"
        android:layout_height="111dp"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="392dp"
        android:progress='@integer/soil_moisture_3'
        android:max="100"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/progressBar2"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="317dp"
        android:layout_height="111dp"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="231dp"
        android:progress='@integer/soil_moisture_2'
        android:max="100"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/progressBar1"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="317dp"
        android:layout_height="111dp"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="65dp"
        android:progress="@integer/soil_moisture_1"
        android:max="100"
        android:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="317dp"
        android:layout_height="111dp"
        android:layout_marginStart="44dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="548dp"
        android:progress='@integer/soil_moisture_4'
        android:max="100"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/progressBar3"/>


    <TextView
        android:id="@+id/moisture_level_text"
        android:layout_width="317dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar4"
        tools:layout_editor_absoluteX="47dp"
        android:text= "@string/soil_moisture_levels"
        />

</androidx.constraintlayout.widget.ConstraintLayout>